    @@keyframes slide-right-from-offscreen {
        from {
            left: -371px;
            width: 450px;
            height: 75%;
        }

        to {
            left: 115px;
            width: 450px;
            height: 75%;
        }
    }

    @@keyframes slide-right-to-offscreen {
        from {
            left: 1251px;
            width: 450px;
            height: 75%;
        }

        to {
            left: 1737px;
            width: 450px;
            height: 75%;
