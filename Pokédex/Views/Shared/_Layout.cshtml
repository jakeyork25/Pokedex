@using Pokédex.Models;

@model PageModel

<style>
    .background-container {
        background: #1A1A1D;
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0px;
        top: 0px;
        overflow-x: hidden;
    }

    .section-container {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .header {
        position: fixed;
        width: 100%;
        height: 12%;
        background: @Model.cssProperties.lightColor;
    }

    h1 {
        position: absolute;
        font-size: 60px;
        font-family: 'OCR A';
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-style: italic;
        color: white;
    }

    .hamburger {
        position: fixed;
        width: 60px;
        height: 50px;
        border: 1px solid black;
        border-radius: 8px;
        background: @Model.cssProperties.dullColor;
        top: 6%;
        left: 92%;
        transform: translate(-50%, -50%);
        z-index: 2;
    }

    .hamburger-bar {
        width: 30px;
        height: 5px;
        position: absolute;
        background: white;
        left: 50%;
    }

    .menu {
        position: fixed;
        width: 45%;
        height: 75%;
        border-radius: 8px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-fill-mode: forwards;
        animation-duration: 2s;
        background: rgb(50, 50, 50);
        visibility: hidden;
        z-index: 3;
        text-align: center;
        overflow-y: auto;
    }
    .menu::-webkit-scrollbar{
        display: none;
    }

    .menu-item {
        font-size: 20px;
        font-family: 'OCR A';
        color: white;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
    }

    .menu-backdrop {
        position: fixed;
        width: 100%;
        height: 100%;
        visibility: hidden;
        z-index: 3;
        backdrop-filter: brightness(50%);
    }

    @@keyframes menu-fade-in {
        from {
            opacity: 0;
            top: 25%;
        }

        to {
            opacity: 1;
            top: 50%;
        }
    }

    @@keyframes menu-fade-out {
        from {
            opacity: 1;
            top: 50%;
        }

        to {
            opacity: 0;
            top: 25%;
        }
    }

    @@keyframes menu-backdrop-fade-in {
        from {
            opacity: 0;
        }

        to {
            opacity: .6;
        }
    }

    @@keyframes menu-backdrop-fade-out {
        from {
            opacity: .6;
        }

        to {
            opacity: 0;
        }
    }

    .exit-button {
        color: white;
        position: fixed;
        top: 5%;
        left: 95%;
        transform: translate(-50%, -50%);
        border: none;
        outline: none;
        background: none;
    }

        .exit-button:hover {
            color: gray;
        }

        .exit-button:focus {
            border: none;
            outline: none;
        }

    .response-button {
        width: 12%;
        height: 9%;
        border: 1px solid black;
        border-radius: 6px;
        color: white;
        background: @Model.cssProperties.dullColor;
        left: 20%;
        position: absolute;
        transform: translateX(-50%);
        font-family: 'OCR A';
    }

        .response-button:hover {
            background: rgb(140, 90, 90);
        }

    .sliding-info {
        position: absolute;
        display: inline-block;
        overflow: visible;
        background-color: @Model.cssProperties.darkColor;
        width: 600px;
        height: 100%;
        left: 683px;
        top: 50%;
        transform: translate(-50%, -50%);
        animation-fill-mode: forwards;
        animation-duration: 0.25s;
    }

        .sliding-info:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: @Model.cssProperties.darkColor;
            transform-origin: bottom right;
            transform: skew(4deg);
            z-index: -1;
        }

        .sliding-info:after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: @Model.cssProperties.darkColor;
            transform-origin: top right;
            transform: skew(4deg);
            z-index: -1;
        }

    @@keyframes slide-left-from-center {
        from {
            left: 683px;
            width: 600px;
            height: 100%;
        }

        to {
            left: 115px;
            width: 450px;
            height: 75%;
        }
    }

    @@keyframes slide-left-to-center {
        from {
            left: 1251px;
            width: 450px;
            height: 75%;
        }

        to {
            left: 683px;
            width: 600px;
            height: 100%;
        }
    }

    @@keyframes slide-left-to-offscreen {
        from {
            left: 115px;
            width: 450px;
            height: 75%;
        }

        to {
            left: -371px;
            width: 450px;
            height: 75%;
        }
    }

    @@keyframes slide-left-from-offscreen {
        from {
            left: 1737px;
            width: 450px;
            height: 75%;
        }

        to {
            left: 1251px;
            width: 450px;
            height: 75%;
        }
