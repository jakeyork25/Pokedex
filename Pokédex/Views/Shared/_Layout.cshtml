    }

    @@keyframes slide-to-most-left {
        0% {
            left: 1737px;
            opacity: 0;
        }

        99% {
            left: -371px;
            opacity: 0;
        }

        100% {
            left: -371px;
            opacity: 1;
        }
    }

    @@keyframes slide-to-most-right {
        0% {
            left: -371px;
            opacity: 0;
        }

        99% {
            left: 1737px;
            opacity: 0;
        }

        100% {
            left: 1737px;
            opacity: 1;
        }
    }

    @@keyframes slide-to-pile {
        from {
            left: -400px;
        }
        to {
            left: -600px;
        }
    }

    @@keyframes hide-info{
        from { opacity: 1; }
        to { opacity: 0; }
    }

    @@keyframes show-info{
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .name-container {
        position: absolute;
        left: 45%;
        top: 3%;
        transform: translateX(-50%);
        color: white;
        font-family: Courier New, Courier, monospace;
        font-size: 36px;
    }

    .type-container {
        position: absolute;
