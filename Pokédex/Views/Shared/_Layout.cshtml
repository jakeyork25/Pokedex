<script>
    var idList = JSON.parse('@Html.Raw(Json.Serialize(Model.idList))');
    $(document).ready(function () {



        function revertCooldownColor() {
            $('.cooldown-div').css('background-color', 'rgb(0, 255, 0)');
        }

        $('.background-container').on('scroll', function () {
            $(".header").css("opacity", 1 - $('.background-container').scrollTop() / 250);
        });

        $('.hamburger').on('click', function () {
            $('.menu').css('visibility', 'visible');
            $('.menu').css('animation-name', 'menu-fade-in');
            $('.menu-backdrop').css('visibility', 'visible');
            $('.menu-backdrop').css('animation-name', 'menu-backdrop-fade-in');
        });

        $('.exit-button').on('click', function () {
            $('.menu').css('animation-name', 'menu-fade-out');
            $('.menu-backdrop').css('animation-name', 'menu-backdrop-fade-out');
            setTimeout(function () {
                $('.menu').css('visibility', 'hidden');
                $('.menu-backdrop').css('visibility', 'hidden');
            }, 2000);
        });

        $('#pokemon-button').on('click', function () {
            $('#move-container').css('visibility', 'hidden');
            $('#ability-container').css('visibility', 'hidden');
            $('#pokemon-container').css('visibility', 'visible');
        });

        $('#move-button').on('click', function () {
            $('#pokemon-container').css('visibility', 'hidden');
            $('#ability-container').css('visibility', 'hidden');
            $('#move-container').css('visibility', 'visible');
        });

        $('#ability-button').on('click', function () {
            $('#pokemon-container').css('visibility', 'hidden');
            $('#move-container').css('visibility', 'hidden');
            $('#ability-container').css('visibility', 'visible');
        });

        $(document).keydown(function (e) {
            if (e.which == '37') {
                if ($('.cooldown-div').css('background-color') == 'rgb(0, 255, 0)') {
                    $('.cooldown-div').css('background-color', 'rgb(255, 0, 0)');
                    setTimeout(function () {
                        revertCooldownColor();
                    }, 600);
                    var centerId;
                    $(".sliding-info").each(function (index) {
                        if ($(this).css('left') == '1737px') {
                            $(this).css('animation-name', 'slide-left-from-offscreen');
                        }
                        else if ($(this).css('left') == '1251px') {
                            $(this).css('animation-name', 'slide-left-to-center');
                            $(this).children(".detail-container").css('animation-name', 'show-info');
                            $(this).children(".type-container").css('animation-name', 'show-info');
                            $(this).children(".stat-container").css('animation-name', 'show-info');
                        }
                        else if ($(this).css('left') == '683px') {
                            centerId = $(this).attr('id');
                            $(this).css('animation-name', 'slide-left-from-center');
                            $(this).children(".detail-container").css('animation-name', 'hide-info');
                            $(this).children(".type-container").css('animation-name', 'hide-info');
                            $(this).children(".stat-container").css('animation-name', 'hide-info');
                        }
                        else if ($(this).css('left') == '115px') {
                            $(this).css('animation-name', 'slide-left-to-offscreen');
                        }
                        else if ($(this).css('left') == '-371px') {
                            $(this).css('animation-name', 'slide-to-pile');
                        }
                    });
                    var dataToPost = {};
                    dataToPost.centerPanel = centerId;
                    dataToPost.panelList = idList;
                    $.post("@Url.Action("GetRightPanel", "Home")", { model: dataToPost }, function (data) {
                        $('#' + data.slate).css('animation-name', 'slide-to-most-right');
                    });
                }
            }
            if (e.which == '39') {
                if ($('.cooldown-div').css('background-color') == 'rgb(0, 255, 0)') {
                    $('.cooldown-div').css('background-color', 'rgb(255, 0, 0)');
