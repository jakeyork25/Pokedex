    .detail-container {
        position: absolute;
        color: white;
        font-family: Courier New, Courier, monospace;
        animation-fill-mode: forwards;
        animation-duration: 0.25s;
        opacity: 0;
        width: 40%;
    }

    .stat-container {
        height: 40%;
        width: 90%;
        background-color: @Model.cssProperties.dullColor;
        position: absolute;
        top: 75%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-fill-mode: forwards;
        animation-duration: 0.25s;
        opacity: 0;
    }

        .stat-container:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: @Model.cssProperties.dullColor;
            transform-origin: bottom right;
            transform: skew(4deg);
            z-index: -1;
        }

        .stat-container:after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: @Model.cssProperties.dullColor;
            transform-origin: top right;
            transform: skew(4deg);
            z-index: -1;
        }

    .stat-bar-container {
        width: 300px;
        height: 40px;
    }

    .stat-bar{
        height: 35%;
        border-radius: 8px;
        background: @Model.cssProperties.lightColor;
        position: relative;
        top: 50%;
        transform: translateY(-50%);
    }

    .cooldown-div {
        position: absolute;
        top: -30px;
        left: -30px;
        width: 5px;
        height: 5px;
        background-color: rgb(0, 255, 0);
    }

    .data-container{
        width: 50%;
        height: 70%;
        border: 1px solid white;
        position: absolute;
        top: 20%;
        left: 45%;
        visibility: hidden;
        overflow-y: auto;
    }
    .data-container::-webkit-scrollbar{
        width: 0;
        background: transparent;
    }

    .data-tile{
        position: relative;
        width: 25%;
        height: 10%;
        float: left;
    }
        .data-tile p {
            position: absolute;
            color: white;
            font-family: Courier New, Courier, monospace;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            text-align: center;
        }

    td {
        padding-left: 10px;
        padding-right: 10px;
        font-family: Courier New, Courier, monospace;
    }

    th {
        font-family: Courier New, Courier, monospace;
    }
    
</style>

